		{
			"name": "OAuth2 Access Token Admin - Authorization Code Grant",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "fc868392-0a9e-4a75-8245-04fe85ead20a",
						"exec": [
							"const BasicAuthCredentials = eval(pm.environment.get(\"BasicAuthCredentials\"));",
							"const authorizeRequest = {",
							"  url: 'http://localhost:8080/oauth/authorize' +",
							"  '?client_id=' + pm.environment.get('client_id') +",
							"  '&response_type=code' +",
							"  '&redirect_uri=' + pm.environment.get('redirect_uri'),",
							"  method: 'POST',",
							"  header: { ",
							"      'Content-Type': 'application/x-www-form-urlencoded',",
							"      'Authorization': 'Basic ' + ",
							"      BasicAuthCredentials(pm.environment.get('admin_username'),pm.environment.get('admin_password'))",
							"  }",
							"};",
							"",
							"",
							"pm.sendRequest(authorizeRequest, function (err, res) {",
							"    if (err === null) {",
							"        console.log('Saving the token')",
							"        pm.environment.set('currentCode', res.text())",
							"    }",
							"});",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "d4c1829a-aed6-4d74-bb1d-7301e4aedabe",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Body is correct\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('access_token');",
							"});"
						],
						"type": "text/javascript"
					}
				}
